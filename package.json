{
  "name": "queridometro-server",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && NODE_ENV=production tsc",
    "clean": "rm -rf dist/",
    "compile": "tsc && yarn start",
    "lint": "eslint src/ --ext js,jsx,ts,tsx src",
    "dev": "NODE_ENV=development nodemon --watch src -e ts,ejs --exec yarn compile",
    "start": "NODE_PATH=./dist node dist/server.js",
    "deploy": "yarn build && NODE_ENV=production sls deploy -v --stage sandbox",
    "deploy:production": "yarn build && NODE_ENV=production sls deploy -v --stage production",
    "test": "kcd-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "apollo-server": "^2.21.2",
    "apollo-server-lambda": "^2.21.2",
    "aws-sdk": "^2.868.0",
    "bcryptjs": "^2.4.3",
    "date-fns": "^2.19.0",
    "dayjs": "^1.10.4",
    "dotenv": "^8.2.0",
    "graphql": "^15.5.0",
    "graphql-iso-date": "^3.6.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.1",
    "nodemon": "^2.0.7",
    "typescript": "^4.2.3",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.72",
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jest": "^26.0.21",
    "@types/mongoose": "^5.10.3",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "apollo-server-testing": "^2.21.2",
    "babel-jest": "^26.6.3",
    "eslint": "^7.22.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "kcd-scripts": "^8.1.1",
    "mongodb-memory-server": "^6.9.6",
    "prettier": "^2.2.1",
    "serverless": "^2.31.0",
    "serverless-dotenv-plugin": "^3.8.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1"
  }
}
